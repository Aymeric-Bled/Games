<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimaryDark"
        />


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/grille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/pow_2"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_brown_white"
                android:padding="3dp"
                android:text="2048"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cinq"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_black_white"
                android:padding="3dp"
                android:text="5x5"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/chomp"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_brown_white"
                android:padding="3dp"
                android:text="Chomp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dames"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_brown_black"
                android:padding="3dp"
                android:text="Dames"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/demineur"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_primary_white"
                android:padding="3dp"
                android:text="DÃ©mineur"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/echecs"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_brown_black"
                android:padding="3dp"
                android:text="Echecs"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/freecell"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_primary_white"
                android:padding="3dp"
                android:text="Freecell"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/hex"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_red_blue"
                android:padding="3dp"
                android:text="Hex"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/jeu_de_la_vie"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_black_white"
                android:padding="3dp"
                android:text="Jeu de la vie"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/labyrinthe"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_red_white"
                android:padding="3dp"
                android:text="Labyrinthe"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/mastermind"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
