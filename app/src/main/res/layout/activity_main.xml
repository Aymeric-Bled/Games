                android:id="@+id/puissance_4"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_red_yellow"
                android:padding="3dp"
                android:text="Puissance 4"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/snake"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_black_white"
                android:padding="3dp"
                android:text="Snake"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/solitaire"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_primary_white"
                android:padding="3dp"
                android:text="Solitaire"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sudoku"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_blue_white"
                android:padding="3dp"
                android:text="Sudoku"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/jeu_du_taquin"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.9"
                android:background="@drawable/main_brown_white"
                android:padding="3dp"
                android:text="Taquin"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </GridLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>